<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= render :partial=>"shared/meta" %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive.min.css", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>  
  <%= stylesheet_link_tag    "header", :media=>"all"%>
  
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap.min" %>
  
  <%= yield :head %>
  
  <%= csrf_meta_tags %>
  <%= render :partial=>"shared/ga" %>
</head>

<body>

  <%= render :partial => "shared/header"%>
  <%= yield :before_container %>
  
  <div id="container">
    <%= yield %>
    <%= render :partial=>"shared/footer", :locals=>{:should_render_social_buttons=>true} %>
  </div>

</body>
</html>
