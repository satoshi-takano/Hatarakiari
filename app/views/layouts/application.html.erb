<!DOCTYPE html>
<html>
<head>
  <title>Hatarakiari</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive.min.css", :media => "all" %>
  
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
    <% if current_user %>
    <p>Welcome, <%=current_user.name %>. <%= link_to "Sign out", signout_path %></p>
    <% else %>
    <%= link_to "Login with twitter", "/auth/twitter" %> |
    <%= link_to "Login with facebook", "/auth/facebook" %> |
    <%= link_to "Login with Github", "/auth/github" %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
