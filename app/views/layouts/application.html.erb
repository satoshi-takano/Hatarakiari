<!DOCTYPE html>
<html>
<head>
  <title>Hatarakiari</title>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive.min.css", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>  

  <%= stylesheet_link_tag "header", :media=>"all" if current_user %>
  <%= yield :head %>
  
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render :partial => "sessions/header" if current_user %>
  
  <div id="container">
    <%= yield %>
    <%= render :partial=>"/layouts/footer" %>
  </div>

</body>
</html>
