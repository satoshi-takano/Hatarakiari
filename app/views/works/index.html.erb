<h1>Listing works</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Client</th>
    <th>Year</th>
    <th>Role</th>
    <th>Description</th>
    <th>Private work</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%= work.name %></td>
    <td><%= work.client %></td>
    <td><%= work.year %></td>
    <td><%= work.role %></td>
    <td><%= work.description %></td>
    <td><%= work.private_work %></td>
    <td><%= work.url %></td>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

