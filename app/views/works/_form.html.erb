<%= form_for(@work) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohiited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Name *" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :client %>
    <%= f.text_field :client %>
  </div>
  <div class="field">
    <%= f.label "Year *" %>
    <%= years = [];
        now = Time.now.year
        for y in (now - 10)..now
          years << y
        end;
        f.select :year, years, :selected=>now %>
  </div>
  <div class="field">
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :size=>"50x5" %>
  </div>
  <div class="field">
    <%= f.label :private_work %>
    <%= f.check_box :private_work %>
  </div>
  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.file_field :image_0 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
