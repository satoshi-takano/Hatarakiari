<div id="header">
  <a href="/"><%= image_tag "/assets/header/logo.png", :class=>"logo" %></a>
  <% if current_user %>
  <div id="admin-tool">
    <div class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= image_tag current_user.avatar_url, :size=>"24x24", :class=>"avatar" %>
        <span class="user_name"><%= current_user.name %></span>
        <%= image_tag "/assets/header/toolbutton.png" %>
      </a>
      <ul class="dropdown-menu" roel="menu" aria-labelledby="dLabel">
        <li><%= link_to "Works", works_path %></li>
        <li><%= link_to "Guests", guests_path %></li>
        <li><%= link_to "Logout", "/logout" %></li>
      </ul>
    </div>
  </div>
  <% end %>
</div>

<script type="text/javascript">
  var toggle = $('.dropdown-toggle');
  toggle.dropdown()
  var menu = $('.dropdown-menu');
  var nameW = $(".user_name").width() + 48;
  toggle.bind('click', function() {
      $('.dropdown-menu').css('margin-left', (nameW - menu.width()) * 0.5 + 'px');
  })
</script>
