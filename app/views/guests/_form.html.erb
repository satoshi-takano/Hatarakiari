<%= form_for(@guest) do |f| %>

<% if @guest.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@guest.errors.count, "error") %> prohiited this work from being saved:</h2>

  <ul>
    <% @guest.errors.full_messages.each do |msg| %>
    <li>- <%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.hidden_field :user_id %>
<div class="field">
  <%= f.label "Login ID *" %>
  <%= f.text_field :login_id %>
</div>
<div class="field">
  <%= f.label "Login password *" %>
  <%= f.password_field :login_password %>
</div>
<div class="field">
  <%= f.label :memo %>
  <%= f.text_field :memo %>
</div>
<div class="actions">
  <div class="btn" id="submit_button">Submit</div>
  <script type="text/javascript">
    $("#submit_button").bind("click", function() {
      $("form").submit();
    })
  </script>
</div>

<% end %>
