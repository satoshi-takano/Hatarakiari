<style type="text/css" media="all">
h1 {
    font-size: 18px;
    color: #3f3f3f;
    margin-bottom: 20px;
}
h3 {
    font-size: 14px;
    margin-top: 20px;
    color: #3f3f3f;
}
h3.top {margin-top: 0;}
ul {
    margin-bottom: 10px;
    margin-left: 10px;
}
li {
    margin-top: 7px;
}
#footer ul {
    margin-left: 0;
}
#container a {
    line-height: 3em;
}
textarea {
    width:340px;
    margin-top: 20px;
}
#submit {
    margin-top: 10px;
    margin-right: 10px;
    float:left;
}
#progress, #status_text {
    margin-top: 17px;
    margin-left: 5px;
}
#sending_status {
    display:none;
}
#progress {
    float:left;
}
#status_text {
    display: inline-block;
    color: #555;
    margin-bottom:0;
}
</style>
<script type="text/javascript">
  $(function() {
      var sending = false;
      $("#submit").bind('click', function(e) {
          e.preventDefault();
          if (sending || $("textarea").get()[0].value.length == 0) return;
          
          sending = true;
          $("form").submit();
          $("#sending_status").css("display", "block");
          $("#status_text").text("送信中");
          $("#progress").css("visibility", "visible");
      })
      
      $("form").on("ajax:complete", function(e, xhr, st) {
          $("#status_text").text("送信しました");
          $("#progress").css("visibility", "hidden");
          setTimeout(function() {
              $("#sending_status").css("display", "none");
              sending = false;
          }, 2000);
      })
  })
</script>
<% end %>

